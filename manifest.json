{
  "manifest_version": 3,
  "name": "LeetCode Reader",
  "version": "1.0",
  "description": "Reads problem data from LeetCode pages",
  "permissions": ["activeTab", "scripting","tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["storage-manager.js", "content.js"]
    }
  ]
}